#define _CRT_SECURE_NO_WARNINGS

/*
Лабораторная работа No3. Поля бит. Структуры.
Задание 1: Найти и вывести целое число, в 8 раз меньше заданного
(без использования операции деления и взятия остатка).
Студент: Волкович Ника
Дата: 31.03.2025
*/

#include <stdio.h>
#include <locale.h>

// Объявление структуры с битовым полем для представления 32-битного числа
struct BitInt {
    int value : 32;  // Битовое поле для хранения целого числа
};

int main(void) {
    setlocale(LC_ALL, "Rus");
    struct BitInt num;  // Переменная структуры с битовым полем
    int tmp;            // Временная переменная для ввода числа

    // Запрос ввода числа от пользователя через временную переменную
    printf("Введите целое число: ");
    if (scanf_s("%d", &tmp) != 1) {
        printf("Ошибка ввода!\n");
        return 1;
    }
    // Присваиваем считанное значение битовому полю
    num.value = tmp;

    // Сдвиг вправо на 3 бита эквивалентен делению на 8
    int result = num.value >> 3;
    printf("Результат (число, в 8 раз меньше): %d\n", result);

    return 0;
}
