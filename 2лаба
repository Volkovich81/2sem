#define _CRT_SECURE_NO_WARNINGS 
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include"function.h"

int main() {
    setlocale(LC_ALL, "Rus");
    char filename[] = "file.txt";
   /* printf("Введите имя файла: ");
    scanf_s("%s", filename);*/


    FILE* file = fopen(filename, "w");
    if (file == NULL) {
        perror("Ошибка при создании файла");
        return 1;
    }

    int n, number;
    printf("Сколько чисел вы хотите записать в файл? ");
    scanf_s("%d", &n);

    printf("Введите числа:\n");
    for (int i = 0; i < n; i++) {
        scanf_s("%d", &number);
        fprintf(file, "%d\n", number);
    }
    fclose(file);

    // Чтение и вывод чисел
    file = fopen(filename, "r");
    if (file == NULL) {
        perror("Ошибка при открытии файла");
        exit(1);
    }

    printf("Числа в файле:\n");
    int sum = 0;
    while (fscanf(file, "%d", &number) != EOF) {
        printf("%d ", number);
        sum += number;
    }
    printf("\nСумма чисел: %d\n", sum);
    fclose(file);

    // Обмен двух последних чисел
    swapLastTwoNumbers(filename);

    return 0;
}

#define _CRT_SECURE_NO_WARNINGS 
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

void swapLastTwoNumbers(const char* filename) {
    FILE* file = fopen(filename, "r");
    if (file == NULL) {
        perror("Ошибка при открытии файла");
        return;
    }

    int numbers[100], count = 0;
    while (fscanf(file, "%d", &numbers[count]) != EOF) {
        count++;
    }
    fclose(file);

    if (count < 2) {
        printf("Недостаточно чисел для обмена.\n");
        return;
    }

    // Обмен двух последних чисел
    int temp = numbers[count - 1];
    numbers[count - 1] = numbers[count - 2];
    numbers[count - 2] = temp;

    file = fopen(filename, "w");
    if (file == NULL) {
        perror("Ошибка при открытии файла для записи");
        return;
    }

    for (int i = 0; i < count; i++) {
        fprintf(file, "%d\n", numbers[i]);
    }
    fclose(file);

    printf("Два последних числа успешно поменяны местами.\n");
}


